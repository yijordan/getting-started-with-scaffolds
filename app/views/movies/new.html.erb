<%= @the_movie.inspect %>

<div>
    <h2>
      Add a new movie
    </h2>

    <form action="/movies" method="post" data-turbo="false">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      
      <div>
        <label for="title">
          Title
        </label>

        <input type="text" id="title" name="title" value="<%= @the_movie.title %>">
      </div>

      <div>
        <label for="description">
          Description
        </label>

        <input type="text" id="description" name="description" value="<%= @the_movie.description %>">
      </div>

      <div>
        <label for="released">
          Released
        </label>

        <input type="text" id="released" name="released" value="<%= @the_movie.released %>">
      </div>

      <button>
        Create movie
      </button>
    </form>
  </div>
